<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/steel_blue"
    tools:context=".ComplaintUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/nameInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:minHeight="48dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="Enter Name"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/emailInput"
            android:hint="Enter Email "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:layout_marginHorizontal="20dp"
            android:minHeight="48dp" />


        <EditText
            android:id="@+id/wingInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="Enter Wing "
            android:inputType="text"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/flatInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:hint="Enter Flat number"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:inputType="number"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/maintenanceInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="Enter Maintenance"
            android:inputType="number"
            android:minHeight="48dp" />


        <EditText
            android:id="@+id/sinkingfundInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="Enter Sinking fund"
            android:inputType="number"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/chargesInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:hint="Parking Charges"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:inputType="number"
            android:minHeight="48dp" />
        <EditText
            android:id="@+id/mq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:hint="Monthly / Quarterly"
            android:inputType="text"
            android:minHeight="48dp" />



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/m_submitBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="submit"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:background="@drawable/button_bg"
            android:layout_gravity="center_horizontal"/>

        <ListView
            android:id="@+id/admin_ViewMaintenance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
